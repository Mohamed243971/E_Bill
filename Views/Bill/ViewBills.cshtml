@model List<E_Bill.Models.Bill>

@{
    ViewBag.Title = "View Bills";
    Layout = "_HomeLayout";
}

<h2>View Bills</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Customer Name</th>
            <th>Address</th>
            <th>Phone</th>
            <th>Amount</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var bill in Model)
        {
            <tr>
                <td>@bill.CustomerName</td>
                <td>@bill.CustomerAddress</td>
                <td>@bill.CustomerPhone</td>
                <td>@bill.Amount</td>
                <td>
                    <div class="btn-group" role="group" aria-label="Actions">
                        <a href="@Url.Action("Details", "Bill", new { id = bill.Id })" class="btn btn-info" title="View Details">
                            <i class="fas fa-eye"></i> View
                        </a>
                        <a href="@Url.Action("Delete", "Bill", new { id = bill.Id })" class="btn btn-danger" title="Delete Bill" onclick="return confirm('Are you sure you want to delete this bill?');">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Home Button -->
<div class="text-center mt-4">
    <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Back to Home</a>
</div

